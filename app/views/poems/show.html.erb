<%= render 'poem_image' %>
<%= render 'voice_params' %>
<h2 id="poem-title"><%= @poem.title %></h2><%= button_tag fa_icon("volume-up lg"), id: "keillorbot" %>
<h5>BY <%= @poem.poet.upcase %></h5>
<br>

<p>
  <% @poem.content.split("\n").each do |line| %>
      <% line.split.each do |word| %>
        <%= link_to word, poems_search_path(clicked_word:word, from_poem:@poem.id), method: :post, class: "poem-word" %>
    <% end %>
    <br>
  <% end %>
</p>
