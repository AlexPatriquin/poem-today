
<div id="poem">
  <div id="poem-body">
  <%= image_tag @poem.image_url, id: 'poem-bg' %>

  <h2 id="poem-title"><%= @poem.title %></h2><%= button_tag fa_icon("volume-up lg"), id: "keillorbot" %>
      
   

  <p><%= @poem.poet %></p>

  <p>
    <% @poem.content.split("\n").each do |line| %>
        <% line.split.each do |word| %>
          <%= link_to word, poems_search_path(clicked_word:word, from_poem:@poem.id), method: :post %>
      <% end %>
      <br>
    <% end %>
  </p>


  <%= content_tag "div", id: "token", data: {token: @token } do %>
  <% end %>
  <%= hidden_field_tag "title", "#{@poem.title}", id: "voice-title" %>
  <%= hidden_field_tag "poet", "#{@poem.poet}", id: "voice-poet" %>
  <%= hidden_field_tag "content", "#{@poem.content}", id: "voice-content" %>

</div>

</div>